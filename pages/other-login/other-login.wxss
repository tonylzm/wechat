.login-button {
  background-color: #007aff;
  color: #fff;
  font-size: small;
  border-radius: 5rpx;
  width: 300rpx;
  height: 76rpx;
  display: inline-block;
  box-sizing: border-box;
  text-align: center; /* 文本水平居中 */
  line-height: 76rpx; /* 文本垂直居中 */
  vertical-align: middle; /* 文本垂直居中 */
}
