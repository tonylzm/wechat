/* invite/pages/editpower/editpower.wxss */
.card {
  position: relative;
  width: 80%; /* 您可以根据需要调整卡片的宽度 */
  background: #ffffff;
  margin: 0 auto; /* 水平居中卡片 */
  box-sizing: border-box;
  padding: 20rpx; /* 为卡片添加一些内边距 */
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  background-color: #f5f5f5;
}
button{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  left: -1rpx; 
  top:642rpx; 
  width: 400rpx; 
  height: 84rpx; 
  display: block; 
  box-sizing: border-box;
  background-color: rgb(2, 151, 250);
  color: #ffffff;
  align-items: center;
}