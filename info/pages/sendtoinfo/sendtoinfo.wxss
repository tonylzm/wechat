/* info/pages/sendtoinfo/sendtoinfo.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.input-area {
  width: 100%;
  height: 150px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 10px;
}

.submit-button, .reset-button {
  width: 100px;
  height: 40px;
  margin-top: 10px;
  border: none;
  border-radius: 4px;
  color: #fff;
  text-align: center;
  line-height: 40px;
}

.submit-button {
  background-color: #4CAF50;
}

.reset-button {
  background-color: #f44336;
}
